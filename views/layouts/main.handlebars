    <script type="text/javascript">
      $('#search-global').keyup(function(e) {
        var key = e.keyCode || e.which;
		if (key == 13) {
	        search();
    	}
      });

      function search() {
          var input = $('#search-global').val();
          if (input)
          	window.location.href = `/search/${input}`;
      }

      adjustSize();

      $(window).resize(function() {
      	adjustSize();
      });

      function adjustSize() {
      	  var offsetTop = $('.navbar').height();
	      var offsetBottom = $('.chat-open').height();
	      var windowChat = $('.chat-window').height() + offsetTop + offsetBottom + 32 - 225;
	      console.log(windowChat);

	      $('.chat-list').css('height', windowChat + 'px');
	      $('.chat-message').css('height', windowChat + 'px');

	      $('.chat-window').css({
	      	  'padding-top': offsetTop + 16 + 'px',
	      	  'padding-bottom': $('.chat-window').height() - offsetBottom - 16 + 'px'
	      });	
      }
      

      

      

      var chatVisible = false;

      function showChat() {
      	  if (chatVisible) {
      	  	  $('.chat-window').css('visibility', 'hidden');
      	  	  chatVisible = false;
      	  }
      	  else {
      	  	  $('.chat-window').css('visibility', 'visible');
      	  	  chatVisible = true;
      	  }
      }
    </script>
